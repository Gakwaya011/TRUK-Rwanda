{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",             
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,          
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
    // "verbatimModuleSyntax": false  <-- We are removing/disabling this causing the crash
  },
  "include": ["src/**/*"]
}